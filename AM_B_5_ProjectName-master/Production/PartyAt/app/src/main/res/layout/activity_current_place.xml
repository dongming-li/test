<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.matthewburke.partyat.CurrentPlace">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Place information goes here)"
        android:layout_below="@+id/btnGetCurPlace"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tvPlaceInfo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Current Place Information"
        android:id="@+id/btnGetCurPlace"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- This is required by the Places API terms of service -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/powered_by_google_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvAttributions"
        android:layout_below="@+id/tvPlaceInfo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:linksClickable="false" />
</RelativeLayout>
