<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.matthewburke.partyat.AddFriend">

    <!--<ListView-->
    <!--android:id="@+id/list_view"-->
    <!--android:layout_width="368dp"-->
    <!--android:layout_height="495dp"-->
    <!--tools:layout_editor_absoluteX="8dp"-->
    <!--tools:layout_editor_absoluteY="8dp" />-->


    <EditText
        android:id="@+id/addNewFriendEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/username" />

    <Button
        android:id="@+id/addNewFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addNewFriendEditText"
        android:layout_alignStart="@+id/addNewFriendEditText"
        android:layout_below="@+id/addNewFriendEditText"
        android:layout_marginTop="35dp"
        android:text="Add Friend" />

    <Button
        android:id="@+id/cancelFriendRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addNewFriendButton"
        android:layout_alignStart="@+id/addNewFriendButton"
        android:layout_below="@+id/addNewFriendButton"
        android:text="Cancel" />


</RelativeLayout>
