<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/pendingFriendsListName"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:text="FirstName LastName"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/pendingFriendsListUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pendingFriendsListName"
        android:text="UserName"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="24sp" />

    <Button
        android:id="@+id/denyFriendButton"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/pendingFriendsListName"
        android:text="Deny" />

    <Button
        android:id="@+id/confirmFriendButton"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/denyFriendButton"
        android:text="Confirm" />

</RelativeLayout>