<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joemarini.placepicker.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_in"
        android:id="@+id/btnTriggerPlacePick"
        android:layout_marginBottom="96dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/differentLocationTextView"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/differentLocationTextView"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picker_differentLocation"
        android:layout_alignBaseline="@+id/btnTriggerPlacePick"
        android:layout_alignBottom="@+id/btnTriggerPlacePick"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/currentLocationTextView"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picker_currentLocation"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/currentLocationDisplayNameTextView"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picker_notCheckedIn"
        android:layout_marginStart="39dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/currentLocationTextView" />

    <TextView
        android:id="@+id/tvPickerAddress"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/picker_locationAddress"
        android:layout_below="@+id/currentLocationTextView"
        android:layout_toStartOf="@+id/currentLocationDisplayNameTextView" />

    <TextView
        android:id="@+id/tvPickerAddressDisplay"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picker_notCheckedIn"
        android:layout_alignBaseline="@+id/tvPickerAddress"
        android:layout_alignBottom="@+id/tvPickerAddress"
        android:layout_alignStart="@+id/currentLocationDisplayNameTextView" />

</RelativeLayout>
